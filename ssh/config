# Cloud server with yubikey nano
Host cloud-nano
    HostName henrikz.net
    User henrik
    IdentityFile ~/.ssh/id_ecdsa_sk_nano
    RequestTTY force
    RemoteCommand neofetch && zsh

# Cloud server with USB-C yubikey
Host cloud
    HostName henrikz.net
    User henrik
    IdentityFile ~/.ssh/id_ecdsa_sk
    RequestTTY force
    RemoteCommand neofetch && zsh

#raspberrypi with mac ssh key
Host raspberrypi
    HostName raspberrypi.lan
    User pi
    IdentityFile ~/.ssh/id_ed25519
    RequestTTY force
    RemoteCommand neofetch && zsh

# raspberrypi with yubikey nano
Host rpi
    Hostname raspberrypi.lan
    User pi
    IdentityFile ~/.ssh/id_ecdsa_sk_nano
    RequestTTY force
    RemoteCommand neofetch && zsh

# DKFZ simulation server 
Host v100
    Hostname 10.133.24.118
    User v100
    ForwardAgent yes
    ForwardX11 yes
